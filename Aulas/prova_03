n_aleatorio=7
n_usuario=int(input("Digite um número inteiro de 0 a 10:"))
tentativas=0
while n_usuario!=n_aleatorio:
  if tentativas<2:
    tentativas=tentativas+1
    n_usuario=int(input("Tente novamente, você ainda pode acertar:"))
  else:
    print("Infelizmente você gastou todas suas 3 tentativas.")
    break
else:
  print("Parabéns, você ganhou!") 
